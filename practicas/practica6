 EJERCICIO 2
N칰mero entre 0 y 9999 mostrado al rev칠s
 BufferedReader
import java.io.*;

public class reverso_br {

    public static void main(String[] args) throws Exception {

        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));

        int num;
        System.out.print("Ingrese numero: ");
        num = Integer.parseInt(br.readLine());

        int rev = 0;
        while(num > 0){
            rev = rev * 10 + num % 10;
            num /= 10;
        }

        System.out.println("Numero invertido: " + rev);
    }
}

---------------------------------------------------------------------------------------------------------------------------------------------------------------

 Scanner
import java.util.Scanner;

public class reverso_scanner {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        int num = sc.nextInt();
        int rev = 0;

        while(num > 0){
            rev = rev * 10 + num % 10;
            num /= 10;
        }

        System.out.println("Numero invertido: " + rev);
    }
}

----------------------------------------------------------------------------------------------------------------------------------------------------------

 JOptionPane
import javax.swing.JOptionPane;

public class reverso_dialogo {

    public static void main(String[] args) {

        int num = Integer.parseInt(JOptionPane.showInputDialog("Ingrese numero:"));
        int rev = 0;

        while(num > 0){
            rev = rev * 10 + num % 10;
            num /= 10;
        }

        JOptionPane.showMessageDialog(null,"Numero invertido: " + rev);
    }
}

