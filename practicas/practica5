//Practica5

EJERCICIO 10 (BASE – venta de 2 productos)
public class Ejercicio10 {

    public static void main(String[] args) {

        double prod1 = 25.50;
        double prod2 = 13.75;
        double iva = 0.16;

        double subtotal = prod1 + prod2;
        double ivaTotal = subtotal * iva;
        double total = subtotal + ivaTotal;

        System.out.println("Producto 1: " + prod1);
        System.out.println("Producto 2: " + prod2);
        System.out.println("Subtotal: " + subtotal);
        System.out.println("IVA: " + ivaTotal);
        System.out.println("Total: " + total);
    }
}
-------------------------------------------------------------------------------------------------------------------------------------------------------

EJERCICIO 10_B (AGREGANDO 2 PRODUCTOS MÁS)
public class Ejercicio10_b {

    public static void main(String[] args) {

        double p1 = 25.5;
        double p2 = 13.75;
        double p3 = 40.25;
        double p4 = 18.90;
        double iva = 0.16;

        double subtotal = p1 + p2 + p3 + p4;
        double ivaTotal = subtotal * iva;
        double total = subtotal + ivaTotal;

        System.out.println("Subtotal: " + subtotal);
        System.out.println("IVA: " + ivaTotal);
        System.out.println("Total: " + total);
    }
}

